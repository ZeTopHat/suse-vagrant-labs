        "FQDN" => machine_vars["fqdn"],
        "SHORT" => machine_vars["short"],
        "NTPSERVER" => machine_vars["ntpserver"]
      }
    end
  end

  # SLE 15 SP3 Server
  config.vm.define "#{LABNAME}15sp3" do |sle|
