        "NTPSERVER" => machine_vars["ntpserver"]
      }
    end
  end
  
  # OpenSUSE Leap 42.3 Server
  config.vm.define "#{LABNAME}leap423" do |sle|
    machine_vars = YAML.load_file("#{WD}config/machines/#{LABNAME}/#{LABNAME}leap423.yaml")
    sle.vm.box = global_vars["box"]["leap423"]
