      }
    end
  end
  
  # OpenSUSE Leap 15.4 Server
  config.vm.define "#{LABNAME}leap154" do |sle|
    machine_vars = YAML.load_file("#{WD}config/machines/#{LABNAME}/#{LABNAME}leap154.yaml")
    sle.vm.box = global_vars["box"]["leap154"]
